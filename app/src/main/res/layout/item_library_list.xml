<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutLibraryList"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

    <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imageViewListPic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:ignore="ContentDescription"
            tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="4dp"
            tools:ignore="RtlSymmetry">

        <TextView
                android:id="@+id/textViewListName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/main_white_color"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Playlist Name" />

        <TextView
                android:id="@+id/textViewListInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/secondary_white_color"
                android:gravity="center_vertical"
                android:maxLines="1"
                tools:text="Playlist Size/Artist" />
    </LinearLayout>
</LinearLayout>