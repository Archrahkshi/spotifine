<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/background_color"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_6"
            tools:context=".presentation_layer.settings_activity.activity.SettingsActivity">

        <androidx.appcompat.widget.AppCompatTextView
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:id="@+id/settingsHeader"
                android:layout_margin="@dimen/up_small_offset"
                android:drawablePadding="@dimen/smallest_offset"
                android:gravity="center"
                android:text="@string/label_settings"
                android:drawableStart="@drawable/settings_small_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">

            <ImageView
                    android:id="@+id/imageViewFullscreen"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/fullscreen_night"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:contentDescription="@string/label_fullscreen_mode" />

            <androidx.appcompat.widget.AppCompatTextView
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="@dimen/small_text_size"
                    app:autoSizeMaxTextSize="@dimen/standard_text_size_15"
                    android:text="@string/label_fullscreen_mode"
                    android:textColor="@color/text_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:id="@+id/text_fullscreen"
                    android:gravity="center|start"
                    android:layout_weight="1" />

            <CheckBox
                    android:id="@+id/checkBoxFullscreen"
                    android:layout_width="48dp"
                    android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/imageViewLanguage"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/language_night"
                    android:contentDescription="@string/label_language" />

            <TextView
                    android:id="@+id/textViewLanguage"
                    android:textColor="@color/text_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="@string/label_language"
                    android:gravity="center|start"
                    android:layout_weight="1" />

            <ImageView
                    android:id="@+id/imageViewFlag"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/label_language" />

            <Spinner
                    android:backgroundTint="@color/white"
                    android:id="@+id/spinnerLang"
                    android:layout_height="match_parent"
                    android:layout_width="48dp" />

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:ignore="UseCompoundDrawables">

            <ImageView
                    android:id="@+id/imageViewExit"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_exit"
                    android:contentDescription="@string/label_exit" />

            <TextView
                    android:background="@color/transparent"
                    android:text="@string/label_exit"
                    android:textColor="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:id="@+id/textViewExit"
                    android:gravity="center|start"
                    android:textSize="@dimen/standard_text_size_15" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>